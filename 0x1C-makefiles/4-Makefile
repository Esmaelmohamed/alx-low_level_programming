CC := gcc
CFLAGS := -Wall -Werror -Wextra -pedantic
SRC := main.c school.c
OBJ := $(SRC:.c=.o)
NAME := school
RM := rm -f

all: $(NAME)

$(NAME): $(OBJ)
    $(CC) $(OBJ) -o $(NAME)

%.o: %.c
    $(CC) $(CFLAGS) -c $< -o $@

.PHONY: all clean fclean oclean re

clean:
    $(RM) $(OBJ) $(NAME) *~

oclean:
    $(RM) $(OBJ)

fclean: clean oclean

re: fclean all

